<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="210mm"
    android:layout_height="297mm">

    <ImageView
        android:id="@+id/logohhs"
        android:layout_width="210mm"
        android:layout_height="23mm"
        android:layout_marginTop="5mm"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logohhs" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="210mm"
        android:layout_height="wrap_content"
        android:layout_marginTop="5mm"
        android:text="AUTORISATION"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/logohhs" />

    <View

        android:id="@+id/sep3"
        android:layout_width="170mm"
        android:layout_height="3dp"
        android:layout_marginTop="5mm"
        android:background="@color/colorPrimary"
        android:paddingStart="20mm"
        android:paddingEnd="20mm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="210mm"
        android:layout_height="wrap_content"
        android:layout_marginTop="5mm"
        android:paddingStart="20mm"
        android:paddingEnd="20mm"
        android:text="Etes-vous satisfait de l’installation effectuée par nos équipes ?	"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/sep3" />

    <LinearLayout
        android:id="@+id/smileys_ctn"
        android:layout_width="210mm"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="5mm"
        android:paddingBottom="5mm"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <LinearLayout
            android:id="@+id/ts"
            android:layout_width="50mm"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/check_ts"
                android:layout_width="20mm"
                android:layout_height="wrap_content"
                android:text="Très satisfait" />

            <ImageView
                android:id="@+id/imageView30"
                android:layout_width="20mm"
                android:layout_height="20mm"
                app:srcCompat="@drawable/tressatisfait" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/s"
            android:layout_width="50mm"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/check_s"
                android:layout_width="20mm"
                android:layout_height="wrap_content"
                android:text="Satisfait" />

            <ImageView
                android:id="@+id/imageView31"
                android:layout_width="20mm"
                android:layout_height="20mm"
                app:srcCompat="@drawable/satisfait" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ps"
            android:layout_width="50mm"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/check_ps"
                android:layout_width="20mm"
                android:layout_height="wrap_content"
                android:text="Pas satisfait" />

            <ImageView
                android:id="@+id/imageView32"
                android:layout_width="20mm"
                android:layout_height="20mm"
                app:srcCompat="@drawable/passatisfait" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/m"
            android:layout_width="50mm"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/check_m"
                android:layout_width="20mm"
                android:layout_height="wrap_content"
                android:text="Pas satisfait" />

            <ImageView
                android:id="@+id/imageView33"
                android:layout_width="20mm"
                android:layout_height="20mm"
                app:srcCompat="@drawable/mecontent" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="210mm"
        android:layout_height="wrap_content"
        android:layout_marginTop="15mm"
        android:paddingStart="20mm"
        android:paddingEnd="20mm"
        android:text="Le matériel est-il conforme à votre bon de commande ?	"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/smileys_ctn" />

    <LinearLayout
        android:id="@+id/smileys_ctn2"
        android:layout_width="210mm"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="5mm"
        android:paddingBottom="5mm"
        app:layout_constraintTop_toBottomOf="@+id/textView13">

        <LinearLayout
            android:id="@+id/ts2"
            android:layout_width="50mm"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/check_ts2"
                android:layout_width="20mm"
                android:layout_height="wrap_content"
                android:text="Très satisfait" />

            <ImageView
                android:id="@+id/imageView302"
                android:layout_width="20mm"
                android:layout_height="20mm"
                app:srcCompat="@drawable/tressatisfait" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ps2"
            android:layout_width="50mm"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/check_ps2"
                android:layout_width="20mm"
                android:layout_height="wrap_content"
                android:text="Pas satisfait" />

            <ImageView
                android:id="@+id/imageView322"
                android:layout_width="20mm"
                android:layout_height="20mm"
                app:srcCompat="@drawable/passatisfait" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/m2"
            android:layout_width="50mm"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/check_m2"
                android:layout_width="20mm"
                android:layout_height="wrap_content"
                android:text="Pas satisfait" />

            <ImageView
                android:id="@+id/imageView332"
                android:layout_width="20mm"
                android:layout_height="20mm"
                app:srcCompat="@drawable/mecontent" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/q1_ctn"
        android:layout_width="210mm"
        android:layout_height="wrap_content"
        android:layout_marginTop="15mm"
        android:orientation="horizontal"
        android:paddingStart="20mm"
        android:paddingEnd="20mm"
        app:layout_constraintTop_toBottomOf="@+id/smileys_ctn2">

        <TextView
            android:id="@+id/q1"
            android:layout_width="125mm"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Les techniciens sont-ils arrivés à l’heure ?	"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/oui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OUI"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/non"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NON"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/q2_ctn"
        android:layout_width="210mm"
        android:layout_height="wrap_content"
        android:layout_marginTop="5mm"
        android:orientation="horizontal"
        android:paddingStart="20mm"
        android:paddingEnd="20mm"
        app:layout_constraintTop_toBottomOf="@+id/q1_ctn">

        <TextView
            android:id="@+id/q2"
            android:layout_width="125mm"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Les techniciens ont-ils répondu à vos questions ?"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/oui2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OUI"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/non2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NON"
            android:textSize="24sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/q3_ctn"
        android:layout_width="210mm"
        android:layout_height="wrap_content"
        android:layout_marginTop="5mm"
        android:orientation="horizontal"
        android:paddingStart="20mm"
        android:paddingEnd="20mm"
        app:layout_constraintTop_toBottomOf="@+id/q2_ctn">

        <TextView
            android:id="@+id/q3"
            android:layout_width="125mm"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Les techniciens vous ont-ils expliqué le fonctionnement du matériel ?"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/oui3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OUI"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/non3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NON"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/q4_ctn"
        android:layout_width="210mm"
        android:layout_height="wrap_content"
        android:layout_marginTop="5mm"
        android:orientation="horizontal"
        android:paddingStart="20mm"
        android:paddingEnd="20mm"
        app:layout_constraintTop_toBottomOf="@+id/q3_ctn">

        <TextView
            android:id="@+id/q4"
            android:layout_width="125mm"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Les techniciens ont-ils nettoyé le chantier après avoir terminé leur intervention ?"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/oui4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OUI"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/non4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NON"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/info_commande_ctn"
        android:layout_width="210mm"
        android:layout_height="wrap_content"
        android:layout_marginTop="5mm"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="20mm"
        android:paddingTop="10sp"
        android:paddingRight="20mm"
        app:layout_constraintTop_toBottomOf="@+id/q4_ctn">

        <LinearLayout
            android:layout_width="40mm"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fait_a"
                android:layout_width="40mm"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="25dp"
                android:text="Fait à"
                android:textAlignment="textStart"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/le"
                android:layout_width="40mm"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="25dp"
                android:text="Le"
                android:textAlignment="textStart"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fait_a_ville"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ville"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/fait_a_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00/00/0000"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/label_sign2"
        android:layout_width="210mm"
        android:layout_height="wrap_content"
        android:layout_marginTop="5mm"
        android:paddingStart="20mm"
        android:paddingEnd="20mm"
        android:text="Signature du client"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/info_commande_ctn" />

    <ImageView
        android:id="@+id/signature2"
        android:layout_width="170mm"
        android:layout_height="45mm"
        android:layout_marginTop="2mm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_sign2"
        app:srcCompat="@drawable/border_planning" />
</android.support.constraint.ConstraintLayout>